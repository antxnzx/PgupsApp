                Grid.Row="6"
                Grid.Column="2"
                Style="{StaticResource AlphabetButtons}"/>
        <Button Text="Я"
                CommandParameter="28"
                Command="{Binding GoToLetterPageCommand}"
                Grid.Row="6"
                Grid.Column="3"
                Style="{StaticResource AlphabetButtons}"/>

    </Grid>
</ContentPage>