<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PgupsApp.Views.extensions.Testing.TestWithOneCorrectAnswerPage"
             xmlns:viewModels="clr-namespace:PgupsApp.ViewModels.extensions.Testing"
             Title="Результат теста"
             Shell.BackgroundColor="{StaticResource MainColor}"
             BackgroundColor="{StaticResource BackgroundColor}"
             Shell.TabBarIsVisible="False">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsEnabled="False" IsVisible="False"/>
    </Shell.BackButtonBehavior>
    <ContentPage.BindingContext>
        <viewModels:TestWithOneCorrectAnswerViewModel/>
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        <Label 
            Text="{Binding CorrectAnswers}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="{Binding AllQuestionsCount}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button HeightRequest="40" WidthRequest="200"
                Text="Выйти из теста"
                Style="{StaticResource TestButtons}"
                Command="{Binding ExitFromTestCommand}"/>
    </VerticalStackLayout>
</ContentPage>