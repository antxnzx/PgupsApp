<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PgupsApp.Views.HomePage"
             xmlns:viewModels="clr-namespace:PgupsApp.ViewModels"
             Title="Домашняя страница"
             Shell.BackgroundColor="{StaticResource MainColor}"
             BackgroundColor="{StaticResource BackgroundColor}">
    <ContentPage.Resources>
        <Style TargetType="Frame" x:Key="FramesWithinfo">
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="0,10"/>
            <Setter Property="BackgroundColor" Value="{StaticResource ForegroundColor}"/>
        </Style>
        <Style TargetType="Frame" x:Key="PhotoFrame">
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="BackgroundColor" Value="Red"/>
            <Setter Property="WidthRequest" Value="200"/>
            <Setter Property="HeightRequest" Value="150"/>
        </Style>
        <Style TargetType="VerticalStackLayout" x:Key="StackInfo">
            <Setter Property="WidthRequest" Value="250"/>
        </Style>
    </ContentPage.Resources>
    <ContentPage.BindingContext>
        <viewModels:HomePageViewModel x:Name="viewModel"/>
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="0,10">
            <Frame  CornerRadius="15" 
                    BackgroundColor="{StaticResource ForegroundColor}"
                    Padding="5"
                    Margin="0"
>
                <Label 
                    Text="Добро пожаловать!"
                    Style="{StaticResource AllText}" 
                    HorizontalOptions="Center"
                    FontSize="30"
                    FontAttributes="Bold"
                    />
            </Frame>
            <Frame  CornerRadius="15" 
                    BackgroundColor="{StaticResource ForegroundColor}"
                    Padding="5">
                <Label 
                    Style="{StaticResource AllText}"
                    Text="Ознакомьтесь с планом обучения и развития своих навыков"
                    FontSize="Subtitle"
                />
            </Frame>

                <VerticalStackLayout>
                <Frame  CornerRadius="15" Padding="0" BackgroundColor="{StaticResource ForegroundColor}">
                    <Label Style="{StaticResource AllText}"
                           Text="Шаг 1: Обучение"
                           FontSize="Title"
                           FontAttributes="Bold"/>
                </Frame>
                <ScrollView Orientation="Horizontal" Margin="0,5,0,0" Padding="5,0">
                        <HorizontalStackLayout Spacing="5">
                        <Frame Style="{StaticResource FramesWithinfo}" >
                            <VerticalStackLayout Style="{StaticResource StackInfo}">
                                <Frame  Style="{StaticResource PhotoFrame}"/>
                                <Label  Style="{StaticResource AllText}"
                                        Text="Инновационные курсы"
                                        FontSize="16"
                                        FontAttributes="Bold"
                                        Margin="10,10,10,0"/>
                                <Label  Style="{StaticResource AllText}"
                                        Text="Погрузитесь в увлекательные и информативные онлайн- курсы по железнодорожному транспорту. Получите необходимые навыки и документ об обучении"/>
                            </VerticalStackLayout>
                        </Frame>
                        <Frame  Style="{StaticResource FramesWithinfo}">
                            <VerticalStackLayout Style="{StaticResource StackInfo}">
                                <Frame  Style="{StaticResource PhotoFrame}"/>
                                <Label  Style="{StaticResource AllText}"
                                        Text="Тренинг-центр"
                                        FontSize="16"
                                        FontAttributes="Bold"
                                        Margin="10,10,10,0"/>
                                <Label  Style="{StaticResource AllText}"
                                        Text="Посетите центр обучения, расположенный в самом сердце города, чтобы узнать о последних технологиях и инновациях в железнодорожной отрасли"/>
                            </VerticalStackLayout>
                        </Frame>
                        <Frame  Style="{StaticResource FramesWithinfo}">
                            <VerticalStackLayout Style="{StaticResource StackInfo}">
                                <Frame  Style="{StaticResource PhotoFrame}"/>
                                <Label  Style="{StaticResource AllText}"
                                        Text="Наставники"
                                        FontSize="16"
                                        FontAttributes="Bold"
                                        Margin="10,10,10,0"/>
                                <Label  Style="{StaticResource AllText}"
                                        Text="Свяжитесь с опытными наставниками-профессионалами, которые помогут вам развить навыки, необходимые для решения перспективных задач"/>
                            </VerticalStackLayout>
                        </Frame>
                        <Frame  Style="{StaticResource FramesWithinfo}">
                            <VerticalStackLayout Style="{StaticResource StackInfo}">
                                <Frame  Style="{StaticResource PhotoFrame}"/>
                                <Label  Style="{StaticResource AllText}"
                                        Text="Общество студентов"
                                        FontSize="16"
                                        FontAttributes="Bold"
                                        Margin="10,10,10,0"/>
                                <Label  Style="{StaticResource AllText}"
                                        Text="Присоединяйтесь к обществу студентов железнодорожного транспорта, чтобы общаться с единомышленниками и получать поддержку и мотивацию"/>
                            </VerticalStackLayout>
                        </Frame>
                    </HorizontalStackLayout>
                    </ScrollView>
                </VerticalStackLayout>


            <VerticalStackLayout>
                <Frame  CornerRadius="15" Padding="0" BackgroundColor="{StaticResource ForegroundColor}">
                    <Label Style="{StaticResource AllText}"
                           Text="Шаг 2: Практика"
                           FontSize="Title"
                           FontAttributes="Bold"/>
                </Frame>
                <ScrollView Orientation="Horizontal" Margin="0,5,0,0" Padding="5,0" >
                    <HorizontalStackLayout Spacing="5">
                        <Frame  Style="{StaticResource FramesWithinfo}">
                            <VerticalStackLayout Style="{StaticResource StackInfo}">

                                <Label  Style="{StaticResource AllText}"
                                        Text="Стажировки на предприятиях"
                                        FontSize="16"
                                        FontAttributes="Bold"
                                        Margin="10,10,10,0"/>
                                <Label  Style="{StaticResource AllText}"
                                        Text="Участвуйте в программе стажировок на крупнейших железнодорожных предприятиях, чтобы получить практический опыт работы в железнодорожной отрасли"/>
                            </VerticalStackLayout>
                        </Frame>
                        <Frame  Style="{StaticResource FramesWithinfo}">
                            <VerticalStackLayout Style="{StaticResource StackInfo}">

                                <Label  Style="{StaticResource AllText}"
                                        Text="Проекты"
                                        FontSize="16"
                                        FontAttributes="Bold"
                                        Margin="10,10,10,0"/>
                                <Label  Style="{StaticResource AllText}"
                                        Text="Применяйте свои знания в проектах, связанных с развитием железнодорожной отрасли. Работайте в команде и получайте ценный опыт профессиональной деятельности"/>
                            </VerticalStackLayout>
                        </Frame>
                        <Frame  Style="{StaticResource FramesWithinfo}">
                            <VerticalStackLayout Style="{StaticResource StackInfo}">

                                <Label  Style="{StaticResource AllText}"
                                        Text="Поддержка ментора"
                                        FontSize="16"
                                        FontAttributes="Bold"
                                        Margin="10,10,10,0"/>
                                <Label  Style="{StaticResource AllText}"
                                        Text="Сопровождайте свой путь к профессиональному развитию с помощью наставника, который поможет вам преодолеть сложности и решить любые задачи"/>
                            </VerticalStackLayout>
                        </Frame>
                        <Frame  Style="{StaticResource FramesWithinfo}">
                            <VerticalStackLayout Style="{StaticResource StackInfo}">

                                <Label  Style="{StaticResource AllText}"
                                        Text="Хакатоны"
                                        FontSize="16"
                                        FontAttributes="Bold"
                                        Margin="10,10,10,0"/>
                                <Label  Style="{StaticResource AllText}"
                                        Text="Участвуйте в хакатонах, чтобы учиться решать проблемы в железнодорожной отрасли. Работайте в команде и покажите свои лучшие знания и навыки"/>
                            </VerticalStackLayout>
                        </Frame>
                    </HorizontalStackLayout>
                </ScrollView>
            </VerticalStackLayout>


            <VerticalStackLayout>
                <Frame  CornerRadius="15" Padding="0" BackgroundColor="{StaticResource ForegroundColor}">
                    <Label Style="{StaticResource AllText}"
                           Text="Шаг 3: Наставничество"
                           FontSize="Title"
                           FontAttributes="Bold"/>
                </Frame>
                <ScrollView Orientation="Horizontal" Margin="0,5,0,0" Padding="5,0" >
                    <HorizontalStackLayout Spacing="5">
                        <Frame  Style="{StaticResource FramesWithinfo}">
                            <VerticalStackLayout Style="{StaticResource StackInfo}">

                                <Label  Style="{StaticResource AllText}"
                                        Text="Личный наставник"
                                        FontSize="16"
                                        FontAttributes="Bold"
                                        Margin="10,10,10,0"/>
                                <Label  Style="{StaticResource AllText}"
                                        Text="Подайте заявление на получение личного наставника, который поможет вам в ваших профессиональных и личных целях"/>
                            </VerticalStackLayout>
                        </Frame>
                        <Frame  Style="{StaticResource FramesWithinfo}">
                            <VerticalStackLayout Style="{StaticResource StackInfo}">

                                <Label  Style="{StaticResource AllText}"
                                        Text="Конференции и вебинары"
                                        FontSize="16"
                                        FontAttributes="Bold"
                                        Margin="10,10,10,0"/>
                                <Label  Style="{StaticResource AllText}"
                                        Text="Посещайте конференции и вебинары, чтобы оставаться в курсе последних новостей и тенденций в сфере железнодорожной отрасли"/>
                            </VerticalStackLayout>
                        </Frame>
                        <Frame  Style="{StaticResource FramesWithinfo}">
                            <VerticalStackLayout Style="{StaticResource StackInfo}">

                                <Label  Style="{StaticResource AllText}"
                                        Text="Сеть контактов"
                                        FontSize="16"
                                        FontAttributes="Bold"
                                        Margin="10,10,10,0"/>
                                <Label  Style="{StaticResource AllText}"
                                        Text="Увеличьте свою профессиональную сеть контактов, чтобы получать доступ к новым возможностям и ресурсам, которые помогут вам решать перспективные задачи в железнодорожной отрасли"/>
                            </VerticalStackLayout>
                        </Frame>
                        
                    </HorizontalStackLayout>
                </ScrollView>
            </VerticalStackLayout>

            <VerticalStackLayout>
                <Frame  CornerRadius="15" Padding="0" BackgroundColor="{StaticResource ForegroundColor}">
                    <Label Style="{StaticResource AllText}"
                           Text="Шаг 4: Карьерный рост"
                           FontSize="Title"
                           FontAttributes="Bold"/>
                </Frame>
                <ScrollView Orientation="Horizontal" Margin="0,5,0,0" Padding="5,0">
                    <HorizontalStackLayout Spacing="5">
                        <Frame  Style="{StaticResource FramesWithinfo}">
                            <VerticalStackLayout Style="{StaticResource StackInfo}">
                                <Frame  Style="{StaticResource PhotoFrame}"/>
                                <Label  Style="{StaticResource AllText}"
                                        Text="Трудоустройство"
                                        FontSize="16"
                                        FontAttributes="Bold"
                                        Margin="10,10,10,0"/>
                                <Label  Style="{StaticResource AllText}"
                                        Text="Найдите свою работу мечты в крупнейших железнодорожных компаниях, которые ценят опыт, знания и навыки, полученные в Ярославском филиале ПГУПС."/>
                            </VerticalStackLayout>
                        </Frame>
                        <Frame  Style="{StaticResource FramesWithinfo}">
                            <VerticalStackLayout Style="{StaticResource StackInfo}">
                                <Frame  Style="{StaticResource PhotoFrame}"/>
                                <Label  Style="{StaticResource AllText}"
                                        Text="Продвижение по карьерной лестнице"
                                        FontSize="16"
                                        FontAttributes="Bold"
                                        Margin="10,10,10,0"/>
                                <Label  Style="{StaticResource AllText}"
                                        Text="Трудитесь на железнодорожном транспорте и продвигайтесь по карьерной лестнице. Возможности для работников с высокой квалификацией неограничены"/>
                            </VerticalStackLayout>
                        </Frame>
                        <Frame  Style="{StaticResource FramesWithinfo}">
                            <VerticalStackLayout Style="{StaticResource StackInfo}">
                                <Frame  Style="{StaticResource PhotoFrame}"/>
                                <Label  Style="{StaticResource AllText}"
                                        Text="Станьте инноватором"
                                        FontSize="16"
                                        FontAttributes="Bold"
                                        Margin="10,10,10,0"/>
                                <Label  Style="{StaticResource AllText}"
                                        Text="Развивайте новые идеи и проекты на железнодорожном транспорте, чтобы стать инноватором в отрасли и получить уникальные возможности для карьерного роста"/>
                            </VerticalStackLayout>
                        </Frame>
                    </HorizontalStackLayout>

                </ScrollView>
            </VerticalStackLayout>

            <Frame Style="{StaticResource FramesWithinfo}">
                <VerticalStackLayout Spacing="10" Padding="0,5">
                    <Label Style="{StaticResource AllText}"
                           FontSize="Title"
                           FontAttributes="Bold"
                           Margin="10,0"
                           Text="Присоединяйтесь к нашему сообществу!"/>
                    <HorizontalStackLayout HorizontalOptions="Center">
                        <Frame WidthRequest="60"
                               HeightRequest="60"
                               CornerRadius="30"
                               HorizontalOptions="Center"
                               Padding="0"
                               Margin="0">
                            <ImageButton Source="telegram.svg"
                                         Aspect="AspectFill"
                                         Command="{Binding GoToTelegramCommand}"
                                         />
                        </Frame>
                        <Button Text="Подписывайтесь на наш канал в Телеграме"
                                Margin="5"
                                Padding="10"
                                TextColor="Black"
                                BackgroundColor="{StaticResource ForegroundColor}"
                                BorderColor="{StaticResource MainColor}"
                                BorderWidth="2"
                                Command="{Binding GoToTelegramCommand}"/>
                        
                    </HorizontalStackLayout>
                    <HorizontalStackLayout HorizontalOptions="Center">
                        <Frame WidthRequest="60"
                               HeightRequest="60"
                               CornerRadius="15"
                               HorizontalOptions="Center"
                               Padding="0"
                               Margin="0">
                            <ImageButton Source="vk.svg"
                                         Aspect="AspectFill"
                                         Command="{Binding GoToVkCommand}"
                                         />
                        </Frame>
                        <Button Text="Присоединяйтесь к сообществу ВКонтакте"
                                Margin="5"
                                Padding="10"
                                TextColor="Black"
                                BackgroundColor="{StaticResource ForegroundColor}"
                                BorderColor="{StaticResource MainColor}"
                                BorderWidth="2"
                                Command="{Binding GoToVkCommand}"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>


        </VerticalStackLayout>
    </ScrollView>
       
        

</ContentPage>