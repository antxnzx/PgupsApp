<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PgupsApp.Views.LoginPage"
             xmlns:viewModels="clr-namespace:PgupsApp.ViewModels"
             xmlns:models="clr-namespace:PgupsApp.Models"
             Title="LoginPage"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.BindingContext>
        <viewModels:LoginPageViewModel x:Name="viewModel"/>
    </ContentPage.BindingContext>
    <ScrollView >
        <Grid BackgroundColor="{StaticResource ForegroundColor}">
            <Grid.RowDefinitions>
                <RowDefinition Height="220"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <BoxView Color="{StaticResource MainColor}" 
               HeightRequest="180" 
               CornerRadius="0, 0, 10, 10"
               VerticalOptions="Start"
               Margin="0"/>
            <StackLayout>
                <Frame BackgroundColor="{StaticResource LightGreenColor}" 
                   HeightRequest="100" 
                   WidthRequest="100" 
                   CornerRadius="50" 
                   Padding="0" 
                   Margin="0, 130, 0, 0" 
                   HorizontalOptions="Center"
                   BorderColor="Black">

                    <Image Source="pgups.svg" Aspect="AspectFill" Margin="0"/>
                </Frame>

            </StackLayout>
            <Grid RowSpacing="5" Grid.Row="1" Margin="20,20,20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="1" 
                   Text="Добро пожаловать!" 
                   HorizontalOptions="Center" 
                   FontSize="Title" 
                   FontAttributes="Bold" 
                   Padding="0"
                   Margin="0"/>
                <Label Grid.Row="2" 
                   Text="Войдите чтобы продолжить"
                   HorizontalOptions="Center" 
                   FontSize="Subtitle" 
                   FontAttributes="Bold" 
                   Padding="0"
                   Margin="0"/>

                <StackLayout Grid.Row="3" 
                         Orientation="Vertical" 
                         HorizontalOptions="CenterAndExpand"
                         MinimumWidthRequest="370">
                    <Frame BackgroundColor="Transparent"
                       BorderColor="{StaticResource LightGreenColor}"
                       Padding="0"
                       HorizontalOptions="Fill"
                       CornerRadius="30">
                        <StackLayout Orientation="Horizontal">
                            <Frame BackgroundColor="{StaticResource LightGreenColor}" 
                               HeightRequest="40" 
                               WidthRequest="40"
                               CornerRadius="30"
                               Padding="0"
                               Margin="5">

                                <Image Source="{x:Static models:Icons.Person300}"
                                   Aspect="AspectFill"
                                   Margin="0"
                           />
                            </Frame>
                            <Entry Text="{Binding EmailLog}"
                               Placeholder="Имя пользователя"
                               TextColor="Black"
                               FontAttributes="Bold"
                               VerticalOptions="Center"
                               HorizontalOptions="Fill"
                               Margin="0, 0, 20, 0"/>
                        </StackLayout>

                    </Frame>

                    <Frame BackgroundColor="Transparent"
                       BorderColor="{StaticResource LightGreenColor}"
                       Margin="0, 15, 0, 0"
                       Padding="0"
                       HorizontalOptions="Fill"
                       CornerRadius="30">
                        <StackLayout Orientation="Horizontal">
                            <Frame BackgroundColor="{StaticResource LightGreenColor}" 
                               HeightRequest="40" 
                               WidthRequest="40"
                               CornerRadius="30"
                               Padding="0"
                               Margin="5">

                                <Image Source="{x:Static models:Icons.Lock300}"
                                   Aspect="AspectFill"
                                   Margin="0"
                                   WidthRequest="30"
                                   HeightRequest="30"
                           />
                            </Frame>
                            <Entry Text="{Binding Password}"
                               Placeholder="Пароль"
                               IsPassword="True"
                               TextColor="Black"
                               FontAttributes="Bold"
                               VerticalOptions="Center"
                               HorizontalOptions="Fill"
                               Margin="0, 0, 20, 0"/>
                        </StackLayout>

                    </Frame>

                    <HorizontalStackLayout HorizontalOptions="Center" Margin="0, 10, 0 ,0" Padding="0">
                        <CheckBox IsChecked="False" Color="{StaticResource LightGreenColor}"/>
                        <Label Text="Запомнить меня" 
                           TextColor="DarkGray" 
                           FontSize="Small" 
                           VerticalTextAlignment="Center"
                           HorizontalTextAlignment="Center"/>
                    </HorizontalStackLayout>

                    <Button Text="Войти" 
                        BackgroundColor="{StaticResource MainColor}"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="30"
                        WidthRequest="200"
                        Margin="0, 15, 0, 0"
                        Command="{Binding LoginCommand}"/>

                </StackLayout>
            </Grid>

        </Grid>
    </ScrollView>
</ContentPage>