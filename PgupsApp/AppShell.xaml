<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PgupsApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PgupsApp"
    xmlns:views="clr-namespace:PgupsApp.Views"
    xmlns:models="clr-namespace:PgupsApp.Models">

    <ShellContent
        Title="Login Page"
        FlyoutItemIsVisible="False"
        Shell.FlyoutBehavior="Disabled"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

    <TabBar Route="HomePage">
        <Tab Title="Home" Icon="{x:Static models:Icons.Home500}">
            <ShellContent
                Title="Home Page"
                ContentTemplate="{DataTemplate views:HomePage}" />
        </Tab>
        <Tab Title="Profile" Icon="{x:Static models:Icons.Person500}">
            <ShellContent
                Title="Profile Page"
                ContentTemplate="{DataTemplate views:ProfilePage}" />
        </Tab>
    </TabBar>

</Shell>
